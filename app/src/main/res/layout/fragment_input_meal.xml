<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Records.InputMealFragment"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-66dp">

    <ImageView
        android:id="@+id/mealImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLoadImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
        tools:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />

    <Button
        android:id="@+id/btnLoadImg"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="사진 불러오기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealImg" />

    <EditText
        android:id="@+id/edtMealDate"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="20230101"
        app:layout_constraintBottom_toTopOf="@+id/edtTimeSlot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoadImg" />

    <TimePicker
        android:id="@+id/tp_Choice_eatTime"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/tv_eatTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

<!--    <Spinner-->
<!--        android:id="@+id/spinnerMealTime"-->
<!--        android:layout_width="240dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_marginStart="150dp"-->
<!--        android:layout_marginEnd="150dp"-->
<!--        android:layout_marginBottom="8dp"-->
<!--        android:background="#FFFFFF"-->
<!--        android:backgroundTint="#CCCCCC"-->
<!--        android:contentDescription="식사 시간대 선택"-->
<!--        android:popupBackground="@color/white"-->
